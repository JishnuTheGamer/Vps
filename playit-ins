#!/bin/bash
# Playit installation script - Auto Installer Made by <3 Jishnu
# Tested on Ubuntu/Debian by Jishnu
# made by hopingboyz

set -e

echo "=== Jishnu: Updating system ==="
sudo apt update -y && sudo apt upgrade -y

echo "=== Jishnu: Installing required dependencies ==="
sudo apt install -y sudo curl gpg

echo "=== Jishnu: Adding Playit APT repository ==="
curl -fsSL https://playit-cloud.github.io/ppa/key.gpg | \
  gpg --dearmor | sudo tee /etc/apt/trusted.gpg.d/playit.gpg >/dev/null

echo "deb [signed-by=/etc/apt/trusted.gpg.d/playit.gpg] https://playit-cloud.github.io/ppa/data ./" | \
  sudo tee /etc/apt/sources.list.d/playit-cloud.list

echo "=== Jishnu: Updating package list ==="
sudo apt update -y

echo "=== Jishnu: Installing Playit ==="
sudo apt install -y playit

echo "=== Jishnu: Enabling Playit service ==="
sudo systemctl enable --now playit

echo "=== Jishnu: Running Playit setup ==="
playit setup

echo "✅ Jishnu: Playit installation complete!"
echo "➡️ Jishnu: Run 'playit status' to check the tunnel status."
