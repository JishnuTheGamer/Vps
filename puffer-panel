#!/bin/bash

# Define colors
GREEN="\e[32m"
YELLOW="\e[33m"
CYAN="\e[36m"
RED="\e[31m"
RESET="\e[0m"

# Loop the menu until the user chooses to exit
while true; do
    # Clear the terminal
    clear

    # Display Installer Name
    echo -e "${GREEN}==============================${RESET}"
    echo -e "${GREEN}         puffer-panel         ${RESET}"
    echo -e "${GREEN}==============================${RESET}"

    # Menu options
    echo -e "${YELLOW}Select an option:${RESET}"
    echo "1) Install pufferpanel on github and all vps"
    echo "2) Install pufferpanel on only codesandbox"
    echo -e "${YELLOW}(Type 'q' or 'exit' to quit)${RESET}"
    echo -n "Enter your choice: "
    read -r choice

    # Run the selected installation script
    case $choice in
        1)
            echo -e "${GREEN}Installing github pufferPanel...${RESET}"
            bash <(curl -fsSL https://github.com/spookyMC123/panel-installer/raw/refs/heads/main/script/puffer%20panel/git-install.sh)
            echo -e "${GREEN}puffer panel process completed successfully!${RESET}"
            ;;
        2)
            # Show disclaimer "popup"
            echo -e "${RED}================================================${RESET}"
            echo -e "${RED} DISCLAIMER:${RESET}"
            echo -e "${RED} You need to run this cmd in codesanbox modded version only - https://codesandbox.io/p/devbox/nervous-dust-skfsyh ${RESET}"
            echo -e "${RED}================================================${RESET}"

            # Prompt for yes/no
            echo -n -e "${CYAN}Now- do you want to proses or go back?- yes/no: ${RESET}"
            read -r response
            response=$(echo "$response" | tr '[:upper:]' '[:lower:]' | xargs)  # Convert to lowercase and trim whitespace

            if [ "$response" = "yes" ]; then
                echo -e "${GREEN}Installing vps pufferpanel...${RESET}"
                bash <(curl -fsSL https://raw.githubusercontent.com/JishnuTheGamer/Puffer-panel-installer/refs/heads/main/Installer)
                echo -e "${GREEN}puffer panel process completed successfully!${RESET}"
            else
                echo -e "${YELLOW}Going back...${RESET}"
                # Loop will take us back to the menu
            fi
            ;;
        q|exit)
            echo -e "${YELLOW}Exiting the installer. Goodbye!${RESET}"
            exit 0
            ;;
        *)
            echo -e "${RED}Invalid choice! Please try again.${RESET}"
            # Loop back to menu
            ;;
    esac

    # Pause briefly before looping back (optional: remove if not needed)
    sleep 2
done
